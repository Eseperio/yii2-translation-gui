{
    "name": "eseperio/yii2-translation-gui",
    "description": "Translation GUI for yii2. Thanks to lajax/yii2-translation-manager",
    "type": "yii2-extension",
    "keywords": ["yii2", "extension", "translate", "language", "module"],
    "license": "MIT",
    "authors": [
        {
            "name": "Lajos Molnar",
            "email": "lajax.m@gmail.com"
        },
	{
	    "name": "E. Alamo",
            "email": "erosdelalamo@gmail.com"
	}
    ],
    "require": {
        "yiisoft/yii2": "~2.0.0",
        "yiisoft/yii2-jui": "~2.0.0",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-httpclient": "~2.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "eseperio\\translatemanager\\": ""
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-fix-dry-run": "php-cs-fixer fix --config=.php_cs --dry-run --diff"
    }
}
